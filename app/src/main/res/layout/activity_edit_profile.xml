<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbg"
    tools:context="com.neterbox.EditProfile">
    <include layout="@layout/custom_action_bar"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_40sdp"
        android:alpha="0.8"
        android:background="#fff"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:src="@drawable/editname"/>
            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:background="#b3cdef"
                ></View>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:hint="Name"
                android:inputType="text"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"
                android:id="@+id/edit_ename"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:textColorHint="#a6a1a6"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="#b3cdef"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:src="@drawable/edituser"/>
            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:background="#b3cdef"
                ></View>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:hint="Username"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"
                android:id="@+id/edit_euname"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:textColorHint="#a6a1a6"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="#b3cdef"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:src="@drawable/editdob"/>
            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:background="#b3cdef"
                ></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:hint="Birthday"
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp"
                android:inputType="datetime"
                android:id="@+id/edit_tbirthday"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColorHint="#a6a1a6"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="#b3cdef"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:src="@drawable/editphone"/>
            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:background="#b3cdef"
                ></View>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:hint="Phone Number"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/edit_ephone"
                android:inputType="phone"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:textColorHint="#a6a1a6"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="#b3cdef"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:src="@drawable/editemail"/>
            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:background="#b3cdef"
                ></View>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:hint="E-mail"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/edit_eemail"
                android:inputType="textEmailAddress"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:textColorHint="#a6a1a6"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="#b3cdef"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:src="@drawable/editsex"/>
            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:background="#b3cdef"
                ></View>

            <EditText
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_20sdp"
                android:hint="Gender"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/edit_egender"
                android:background="@android:color/transparent"
                android:textColorHint="#a6a1a6"/>
            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="center"
                android:src="@drawable/edownarrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="#b3cdef"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:src="@drawable/edithomeaddress"/>
            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:background="#b3cdef"
                ></View>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:hint="Address"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"
                android:inputType="text"
                android:id="@+id/edit_eaddress"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:textColorHint="#a6a1a6"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="#b3cdef"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:src="@drawable/editbusiness"/>
            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:background="#b3cdef"
                ></View>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:hint="Company"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"
                android:id="@+id/edit_ecompany"
                android:inputType="text"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:textColorHint="#a6a1a6"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="#b3cdef"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:src="@drawable/edittitle"/>
            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="#b3cdef"
                ></View>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"
                android:inputType="text"
                android:id="@+id/edit_etitle"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:textColorHint="#a6a1a6"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="#b3cdef"
            ></View>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/loginbluebox"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:id="@+id/edit_bsave"
        android:textColor="#ffffff"
        android:textSize="@dimen/_10sdp"
        android:text="Save"/>
</LinearLayout>
    </ScrollView>
    </LinearLayout>
