<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relCommenstUserView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_pic"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/_5sdp"
            app:civ_border_color="@color/black"
            app:civ_border_width="1dp" />


        <TextView
            android:id="@+id/textUserCommentsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/circle_pic"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:padding="@dimen/_3sdp"
            android:text="fdnsjfdh"
            android:singleLine="true"
            android:textSize="@dimen/_14sdp" />


        <TextView
            android:id="@+id/textUserCommentsDescripstion"
            android:layout_below="@+id/textUserCommentsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/circle_pic"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:padding="@dimen/_3sdp"
            android:text="fdnsjfdh"
            android:maxLines="5"
            android:textSize="@dimen/_12sdp" />


        <TextView
            android:id="@+id/textDateComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textUserCommentsDescripstion"
            android:layout_toRightOf="@+id/circle_pic"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:padding="@dimen/_5sdp"
            android:text="30 Sep 2018"
            android:singleLine="true"
            android:visibility="gone"
            android:textColor="@color/gray"
            android:textSize="@dimen/_11sdp" />


    </RelativeLayout>

</LinearLayout>