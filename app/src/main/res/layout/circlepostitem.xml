<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_3sdp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cvcircle_post_profile"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:gravity="left"
            app:civ_border_color="#fff"
            app:civ_border_width="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tcircle_post_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    tools:text="Jane Wilson"
                    android:layout_weight="1"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dot"
                    android:src="@drawable/playdot"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:src="@drawable/profileeye" />

                    <TextView
                        android:id="@+id/tcirce_post_seen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:text="20"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:gravity="center"
                        android:src="@drawable/profiletimer" />

                    <TextView
                        android:id="@+id/tcircle_post_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:text="11:30 AM"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tcircle_post_cap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Go where you are celebrated not where you are tolerated.Go where you are celebrated not where you are tolerated."
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/icircle_post_pic"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/_3sdp"
            android:visibility="gone"
            />

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:id="@+id/icircle_post_video"
            android:layout_marginTop="@dimen/_3sdp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="@dimen/_85sdp"
            android:layout_height="match_parent"
            android:id="@+id/lcircle_post_comment">
            <TextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:id="@+id/tcircle_post_comment"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(12)"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/tcircle_post_commentno"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_75sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/lcircle_post_likes"
            android:layout_marginLeft="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12"
                android:id="@+id/tcircle_post_likesno"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Likes"
                android:id="@+id/tcircle_post_like"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:id="@+id/icircle_post_likes"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:src="@drawable/heart" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/lfollowing"
            android:layout_marginLeft="@dimen/_5sdp">
            <TextView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent"
                android:text="Following"
                android:textColor="@color/header_color"
                android:id="@+id/tfollowing"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/lcircle_post_channel"
            android:layout_marginLeft="@dimen/_5sdp">
            <TextView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:text="Channel"
                android:id="@+id/tcircle_post_channel"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"/>

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:id="@+id/icircle_post_share"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/shareoption" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
