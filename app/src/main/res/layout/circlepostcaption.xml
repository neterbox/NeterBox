<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:id="@+id/icircle_post_pic"
        android:adjustViewBounds="true"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/_3sdp"
        android:src="@drawable/profilpicture"
        android:visibility="gone"
        />

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:id="@+id/icircle_post_video"
        android:adjustViewBounds="true"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/_3sdp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/edit_caption"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:hint=" Enter the Caption "
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:layout_gravity="left"
        android:textSize="@dimen/_15sdp" />
        <ImageView
            android:id="@+id/button_caption_send"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="center"
            android:src="@drawable/chatsendchat" />
    </LinearLayout>

</LinearLayout>