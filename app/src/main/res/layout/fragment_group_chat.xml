<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neterbox.fragment.GroupChatFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/searchbox"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/isearch"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:src="@drawable/search" />

            <EditText
                android:id="@+id/tsearchgroups"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="  Search Group"
                android:textColorHint="#4c4c4c"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lchatcorgroup"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_12sdp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/icontactsforgroupchat"
                android:padding="@dimen/_5sdp"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/pic1"
                app:civ_border_color="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tgroupitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="2dp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#000000" />

            </LinearLayout>

            <ImageView
                android:id="@+id/igroupback"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_25sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_gravity="center"
                android:src="@drawable/friendlistarrow" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
